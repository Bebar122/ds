local character = game.Players.LocalPlayer.Character
print('em')
-- Собираем все объекты "Earth" внутри персонажа
local earthObjects = {}
for _, obj in pairs(character:GetChildren()) do
    if obj.Name == "Earth" then
        table.insert(earthObjects, obj)
    end
end

-- Функция для обработки элемента (MakeDark)
local function MakeDark(earth)
    if not earth then return end
    for _, child in pairs(earth:GetChildren()) do
        child:Destroy()
    end
end

-- Функция для обработки элемента (MakeBlue)
local function MakeBlue(earth)
    if not earth then return end
    for _, child in pairs(earth:GetChildren()) do
        if not child:IsA("SelectionBox") then
            child:Destroy()
        end
    end
end

-- Функция для обработки массива earthObjects
local function processEarthObjects(maskMatrix)
    -- Удаляем первые 20 и последние 12 элементов
    for i = 1, 34 do
        MakeDark(earthObjects[i]) -- Перед удалением делаем элемент тёмным
    end
    for i = 1, 34 do -- Перед удалением делаем элемент тёмным
        table.remove(earthObjects, 1)
    end
    for i = 1, 30 do
        MakeDark(earthObjects[#earthObjects]) -- Перед удалением делаем элемент тёмным
        table.remove(earthObjects)
    end

    -- Проверяем, что массив содержит ровно 14x16 элементов (224)
    --assert(#earthObjects == 224, "Размер массива после удаления некорректен")

    -- Размеры матрицы
    local rows, cols = 30, 32

    -- Проверяем, что maskMatrix имеет правильные размеры
    assert(#maskMatrix == rows, "Некорректное количество строк в маске")
    for _, row in ipairs(maskMatrix) do
        assert(#row == cols, "Некорректное количество столбцов в маске")
    end

    -- Обрабатываем массив как матрицу на основе maskMatrix
    for row = 1, rows do
        for col = 1, cols do
            -- Индекс элемента в массиве
            local index = (row - 1) * cols + col
            local earth = earthObjects[index]

            if maskMatrix[row][col] == 1 then
                -- Если значение в маске 1 — делаем голубым
                MakeBlue(earth)
            else
                -- Если значение в маске 0 — делаем тёмным
                MakeDark(earth)
            end
        end
    end
end



-- Получаем необходимые сервисы

